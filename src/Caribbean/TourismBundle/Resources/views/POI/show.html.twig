{% extends '::base.html.twig' %}

{% block head_script %}
    <style type="text/css">
        .rating {
            unicode-bidi: bidi-override;
            direction: rtl;
            font-size: 30px;
        }
        .rating span.star {
            font-family: FontAwesome;
            font-weight: normal;
            font-style: normal;
            display: inline-block;
        }
        .rating span.star:hover {
            cursor: pointer;
        }
        .rating span.star:before {
            content: "\f006";
            padding-right: 5px;
            color: #777777;
        }
        .rating span.star:hover:before,
        .rating span.star:hover ~ span.star:before {
            content: "\f005";
            color: #e3cf7a;
        }
    </style>
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="col-lg-4">

            {% if not entity.galeria.isEmpty  %}
                <img class="img-thumbnail" src="{{ asset('uploads/' ~ entity.galeria.get(0).ruta) }}" style="max-width: 380px; max-height: 380px; overflow: hidden;">
            {% else %}
                <i class="fa fa-file-image-o" style="font-size: 10em;"></i>
            {% endif %}
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-8">
                    <h2><strong>{{ entity.nombre }}</strong></h2>
                </div>
                <div class="col-lg-4">
                    <div class="clearfix" style="margin-top: 18px;">
                        <div class="rating pull-left">
                            <span class="star"></span>
                            <span class="star"></span>
                            <span class="star"></span>
                            <span class="star"></span>
                            <span class="star"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12"><h4><strong>Contacto:</strong> {{ entity.contacto }}</div></h4>
                <div class="col-lg-12"><h4 style="text-align: justify;">{{ entity.descripcion ? entity.descripcion : 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium ad asperiores corporis distinctio eveniet fugit, impedit, iste laborum minus necessitatibus repellendus tempore? Distinctio dolorem ex exercitationem, libero mollitia similique veniam?' }}</div></h4>
            </div>
            <div class="row">
                <div class="col-lg-1"><a href="http://www.facebook.com"><i class="fa fa-facebook-square fa-3x"></i></a></div>
                <div class="col-lg-1"><a href="http://plus.google.com"><i class="fa fa-google-plus-square fa-3x"></i></a></div>
                <div class="col-lg-1"><a href="http://www.twitter.com"><i class="fa fa-twitter-square fa-3x"></i></a></div>
            </div>
        </div>
    </div>

    {#<div role="group">#}
        {#<a href="{{ path('poi') }}" class="btn btn-default btn-md"><i class="fa fa-list"></i> Listado</a>#}
        {#<a href="{{ path('poi_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-md"><i class="fa fa-edit"></i> Editar</a>#}
    {#</div>#}
{% endblock %}
