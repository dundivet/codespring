{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Listado de Puntos de Interés</h1>

    <a href="{{ path('poi_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Crear nuevo</a>

    <div class="table-responsive">
        <table class="table table-condensed table-hover">
            <thead>
                <tr>
                    {# sorting of properties based on query components #}
                    <th>{{ knp_pagination_sortable(entities, 'Nombre', 'd.nombre') }}</th>
                    <th>{{ knp_pagination_sortable(entities, 'Dirección', 'd.direccion') }}</th>
                    <th>{{ knp_pagination_sortable(entities, 'Contacto', 'd.contacto') }}</th>
                    <th>{{ knp_pagination_sortable(entities, 'Ciudad', 'd.ciudad') }}</th>
                    <th>Latitud</th>
                    <th>Longitud</th>
                    <th class="action">Acciones</th>
                </tr>
            </thead>
            <tbody>

            {% for entity in entities %}
                <tr>
                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.descripcion }}</td>
                    <td>{{ entity.contacto }}</td>
                    <td>{{ entity.ciudad }}</td>
                    <td>{{ entity.latitud }}</td>
                    <td>{{ entity.longitud }}</td>
                    <td class="action">
                        <a href="{{ path('poi_show', { 'id': entity.id }) }}" class="btn btn-default btn-sm"><i class="fa fa-eye"></i> mostrar</a>
                        <a href="{{ path('poi_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i> editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row text-center">
        {# display navigation #}
        <div class="navigation col-lg-12">
            {{ knp_pagination_render(entities) }}
        </div>
    </div>
    {% endblock %}
