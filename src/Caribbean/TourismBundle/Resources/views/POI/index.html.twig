{% extends '::base.html.twig' %}

{% block body -%}
    <h1>POI list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Direccion</th>
                <th>Contacto</th>
                <th>Ciudad</th>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('poi_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.contacto }}</td>
                <td>{{ entity.ciudad }}</td>
                <td>{{ entity.latitud }}</td>
                <td>{{ entity.longitud }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('poi_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('poi_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('poi_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
